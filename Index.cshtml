@using ColorWebsite.Data.Entities;
@model List<DemoColor>

@{
    ViewBag.Title = "Home";
}

<p>
   Web App Instance ID: @Environment.GetEnvironmentVariable("WEBSITE_INSTANCE_ID")

</p>

<p>
    <h1>Do you like colors?</h1>
</p>

<div class="row">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
        <div class="col-md-4" style="height:40em;background-color:@item.Name">
            <h2>@item.Name</h2>
        </div>
 
        }
    }
    else
    {
        <h1>No colors found!</h1>
    }
</div>